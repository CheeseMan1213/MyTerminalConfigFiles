[user]
  name = James Hawley II
  email = iliketofeelcheesetootoo@yahoo.com

[core]
  editor = vim
  autocrlf = input
  safecrlf = true
  excludesfile = ~/.gitignore_global

[init]
  defaultBranch = main

[push]
  default = simple
  autoSetupRemote = true

[pull]
  rebase = true

[merge]
  tool = vimdiff
  conflictStyle = zdiff3

[diff]
  tool = vimdiff

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  st = status
  co = checkout
  br = branch
  ci = commit
  ca = commit -a
  cm = commit -m
  unstage = reset HEAD --
  last = log -1 HEAD
  visual = !gitk
  lg = log --oneline --decorate --all --graph
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

[credential]
  helper = osxkeychain

[rerere]
  enabled = true

[help]
  autocorrect = 1

